html
   head
    title Login Test Application    
    
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.css')
    link(type='text/css', rel='stylesheet', href='/css/site.css')       
    script(src='/js/jquery-2.0.3.js'); 
    script(src='/js/bootstrap.js');
    
  body
    div.navbar.navbar-inverse.navbar-fixed-top
       div.navbar-inner
         div.container
            button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.brand(href='/') Login Test Application
            div.nav-collapse.collapse
              ul.nav
                -var obj = { 'home':'Home', 'about':'About', 'contact':'Contact', 'account':'Account' }
                -each val, key in obj
                  -if (id == key)
                    li.active
                      a(href='#{key}') #{val}
                  -else            
                    li
                      a(href='#{key}') #{val}
            if !user        
               div.btn-toolbar.pull-right
                  a.btn.btn-primary(href='login', type='button') Log in
                  a.btn.btn-primary(href='register', type='button') Register
            else
               a.btn.btn-primary.pull-right(href='logout', type='button') Log out         
      
    block content