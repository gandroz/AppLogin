extends layout

block content
   div.container-fluid
      form.form-signin(method='post', , action='/jobs')
         h2.form-signin-heading Enter a new job offer
         input.input-block-level(type='text', name='title', placeholder='Title')
         input.input-block-level(type='textarea', name='description', placeholder='Job description')
         input.input-block-level(type='text', name='salary', placeholder='Proposed salary')
         input.input-block-level(type='text', name='dueDate', placeholder='DueDate')
         button.btn.btn-large.btn-primary(type='submit') Create