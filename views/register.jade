extends layout

block content
   div.container-fluid
      form.form-signin(method='post')
         h2.form-signin-heading Please sign in
         input.input-block-level(type='text', name='username', placeholder='Username')
         input.input-block-level(type='email', name='email', placeholder='Email address')
         input.input-block-level(type='password', name='password', placeholder='Password')
         label.checkbox
            input(type='checkbox', value='remember-me') 
            | Remember me
         button.btn.btn-large.btn-primary(type='submit') Register